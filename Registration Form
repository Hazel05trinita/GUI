from tkinter import *
root = Tk()
root.title("Registration form")
root.geometry("650x250")
registrationform = Label(root,text = "Registration Form",font=("Arial", 25) ).grid(column=0,row=0,padx=20, columnspan=2, sticky=W)
fullname = Label(root,text = "Full name").grid(column=0, row=1, sticky=W, padx=20)
email= Label(root,text = "Email").grid(column=0, row=2, sticky=W, padx=20)
gender = Label(root,text = "Gender").grid(column=0, row=3, sticky=W, padx=20)
country = Label(root,text = "Country").grid(column=0, row=4, sticky=W, padx=20)
programming = Label(root,text = "Programming").grid(column=0, row=5, sticky=W, padx=20)
fullnametext= Text(root, height=1, width=20).grid(column=1, row=1, sticky=W)
emailtext = Text(root, height=1, width=20).grid(column=1, row=2, sticky=W)
gendervalue = StringVar(root, "Male")
genderoptions = {"Male": "Male","Female": "Female"}
genderframe = Frame(root).grid(column=1, row=3)
Radiobutton(genderframe, text="Male", variable=gendervalue, value="Male").grid(column=1,row=3,sticky=W)
Radiobutton(genderframe, text="Female", variable=gendervalue, value="Female").grid(column=1,row=3,sticky=E)
countries = ["India", "Japan", "USA", "Korea", "Canada"]var =StringVar(root)
menu = OptionMenu(root, var, *countries).grid(column=1, row=4, sticky=W)
javaselected = BooleanVar()
programmingcheckbox = Checkbutton(root,text='Java',
variable=javaselected,onvalue=True,offvalue=False).grid(column=1, row=5, sticky=W)
pythonselected = BooleanVar()
programmingcheckbox = Checkbutton(root,text='Python',variable=pythonselected,onvalue=True,offvalue=False).grid(column=1, row=5, sticky=E)
submit = Button(root, bg="red", text="Submit").grid(column=0, row=6, sticky=W, padx=23)
root.mainloop()
